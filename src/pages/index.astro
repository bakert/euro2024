---
import Layout from '../layouts/Layout.astro';
import Match from '../components/Match.astro'

const response = await fetch('http://localhost:4321/matches');
const matches = await response.json();
---

<Layout title="Home">
	<h1>Home</h1>
	{matches.nextMatches && <h2>Next Match</h2>}
	{matches.nextMatches && matches.nextMatches.map((match) => <Match match={match} />)}
	{matches.lastMatches && <h2>Previous Match</h2>}
	{matches.lastMatches && matches.lastMatches.map((match) => <Match match={match} />)}
</Layout>
