---
import Layout from "../layouts/Layout.astro";
import Match from "../components/Match.astro"
import type { MatchT } from "../models/models.ts";

const response = await fetch("https://bluebones.net/matches.json");
const matches = await response.json();
---

<Layout title="Home">
    <h1>Home</h1>
    {matches.nextMatches && <h2>Next Match</h2>}
    {matches.nextMatches && matches.nextMatches.map((match: MatchT) => <Match match={match} />)}
    {matches.lastMatches && <h2>Previous Match</h2>}
    {matches.lastMatches && matches.lastMatches.map((match: MatchT) => <Match match={match} />)}
</Layout>
